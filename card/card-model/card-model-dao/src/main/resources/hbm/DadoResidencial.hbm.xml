<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.bancoamazonia.integracao.card.model.domain.DadoResidencial" table="dado_residencial">
		<id name="id" type="long">
			<generator class="identity"/>
		</id>
		
		<many-to-one name="cliente" column="codigo_cliente" not-null="true" unique="true"
			class="br.com.bancoamazonia.integracao.card.model.domain.Cliente"/>
			
		<many-to-one name="endereco" column="id_endereco" not-null="true" unique="true" cascade="save-update, delete"
			class="br.com.bancoamazonia.integracao.card.model.domain.Endereco"/>
			
		<component name="telefone" class="br.com.bancoamazonia.integracao.card.model.domain.Telefone" >
			<property name="ddd" column="ddd" length="2" not-null="true"/>
			<property name="numero" column="telefone" length="8" not-null="true"/>
		</component>
			
		<many-to-one name="situacaoResidencial" column="id_situacao_residencial" not-null="true"
			class="br.com.bancoamazonia.integracao.card.model.domain.SituacaoResidencial"/>
	</class>
</hibernate-mapping>