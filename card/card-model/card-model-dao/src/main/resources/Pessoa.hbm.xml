<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.bancoamazonia.integracao.card.model.domain.Pessoa" table="pessoa">
		<id name="codigo" type="string" length="14"/>
		<property name="nome"/>
		<one-to-one name="endereco" foreign-key="id_endereco" cascade="save-update, delete"  
			class="br.com.bancoamazonia.integracao.card.model.domain.Endereco" />
			
		<joined-subclass name="br.com.bancoamazonia.integracao.card.model.domain.Cliente" 
			extends="br.com.bancoamazonia.integracao.card.model.domain.Pessoa">
			<key column="codigo"/>
			<many-to-one name="titular" column="codigo_titular" not-null="false"
				class="br.com.bancoamazonia.integracao.card.model.domain.Cliente" />
			<component name="telefone"
				class="br.com.bancoamazonia.integracao.card.model.domain.Telefone" >
				<property name="ddd" column="ddd_tel" length="2"/>
				<property name="numero" column="telefone" length="8"/>
			</component>
			<component name="celular"
				class="br.com.bancoamazonia.integracao.card.model.domain.Telefone" >
				<property name="ddd" column="ddd_cel" length="2"/>
				<property name="numero" column="celular" length="8"/>
			</component>
			<many-to-one name="tipo" column="id_tipo_cliente"
				class="br.com.bancoamazonia.integracao.card.model.domain.TipoCliente"/>
			<many-to-one name="sexo" column="id_sexo"
				class="br.com.bancoamazonia.integracao.card.model.domain.Sexo"/>
			<many-to-one name="estadoCivil" column="id_estado_civil"
				class="br.com.bancoamazonia.integracao.card.model.domain.EstadoCivil"/>
			<many-to-one name="escolaridade" column="id_escolaridade"
				class="br.com.bancoamazonia.integracao.card.model.domain.Escolaridade"/>
			<many-to-one name="situacaoResidencial" column="id_situacao_residencial"
				class="br.com.bancoamazonia.integracao.card.model.domain.SituacaoResidencial"/>
			<property name="nomeMae" column="nome_mae"/>
			<property name="dataNascimento" column="data_nascimento"/>
			<property name="email"/>
		</joined-subclass>
		<joined-subclass name="br.com.bancoamazonia.integracao.card.model.domain.FontePagadora" 
			extends="br.com.bancoamazonia.integracao.card.model.domain.Pessoa">
			<key column="codigo"/>
			<many-to-one name="tipoFontePagadora" column="tipo_fonte_pagadora_id"
				class="br.com.bancoamazonia.integracao.card.model.domain.TipoFontePagadora"/>
		</joined-subclass>
	</class>
</hibernate-mapping>